{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@modules/*": ["./src/modules/*"],
      "@common/*": ["./src/common/*"],
      "@core/*": ["./src/core/*"]
    }
  }
}
